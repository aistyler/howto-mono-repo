{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    // N.B. *DO NOT* set 'rootDir' here
    // The parent rootDir will be used to run without building
    "baseUrl": ".",
    "paths": {
      "~/src/*": ["src/*"],
      "~/test/*": ["test/*"],
      // set paths for local dependency packages
      "lib-common": ["../../packages-common/packages/lib-common/src"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../lib-server" },
    { "path": "../../packages-common/packages/lib-common" },
  ]
}
