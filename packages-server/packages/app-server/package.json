{
  "name": "app-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/server.ts",
    "test": "jest",
    "build": "tsc -b tsconfig-build.json",
    "clean": "rimraf build",
    "start": "node build/server.js"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.26",
    "jest": "^27.5.1",
    "rimraf": "^3.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "lib-common": "*"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "~src/(.*)$": "<rootDir>/src/$1",
      "~test/(.*)$": "<rootDir>/test/$1",
      "lib-common": "<rootDir>/../../packages-common/packages/lib-common/src"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ]
  }
}
