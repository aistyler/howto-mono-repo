{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    // override root dir
    "rootDir": "src",
    // override paths.
    // remove the paths of dependency packages
    "paths": {
      "~/src/*": ["src/*"],
      "~/test/*": ["test/*"],
    }
  },
  "exclude": ["build"]
}
